#!/usr/bin/env bash
# a Bash script that displays numbers from 1 to 20 and:
# displays 4 and then bad luck from China for the 4th loop
# displays 9 and then bad luck from Japan for the 9th loop
# displays 17 and then bad luck from Italy for the 17th 

counter=1
while [ $counter -le 20 ]
do
	case $counter in
		4)
			echo "$counter"
			echo "bad luck from China";;
		9)
			echo "$counter"
			echo "bad luck from Japan";;
		17)
			echo "$counter"
			echo "bad luck from Italy"
			;;
		*)
			echo $counter
			;;
	esac

	((counter++))
done
